@page
@model ClientsCRUD.Pages.Member.EditModel
@{
}
<h2>編輯會員</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>
            @Model.errorMessage
        </strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>

    </div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.mInfo.memID" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">會員名稱</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.mInfo.memName"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">會員電話</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.mInfo.memPhone"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">會員Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.mInfo.memEmail"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">會員生日</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="birth" value="@Model.mInfo.memBirth" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">會員備註</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="remark" value="@Model.mInfo.memRemark" />
        </div>
    </div>

    @if (Model.succMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong> @Model.succMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" asp-page="/Member/Index" role="button">Cancel</a>
        </div>
    </div>
</form>